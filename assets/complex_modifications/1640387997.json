{
  "title": "[macOS] Windows-like word movement/selection/deletion",
  "maintainers": ["tyru"],
  "rules": [
    {
      "description": "Cmd + Arrow Keys to Option + Arrow Keys",
      "manipulators": [
        {
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_command",
                "right_control",
                "right_option",
                "left_command"
              ],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_command",
                "right_control",
                "right_option",
                "left_command"
              ],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_command",
                "right_control",
                "right_option",
                "left_command"
              ],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_command",
                "right_control",
                "right_option",
                "left_command"
              ],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Cmd + Backspace to Option + Backspace",
      "manipulators": [
        {
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["left_command"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["option"]
            },
            {
              "key_code": "delete_forward",
              "modifiers": ["option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Hyper + Cmd + Backspace to Option + Delete",
      "manipulators": [
        {
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_command",
                "right_control",
                "right_option",
                "left_command"
              ],
              "optional": ["caps_lock"]
            }
          },
          "to": {
            "key_code": "delete_forward",
            "modifiers": ["option"],
            "repeat": true
          }
        }
      ]
    }
  ]
}
